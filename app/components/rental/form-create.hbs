
<div class="flex justify-center items-center  flex-wrap mt-4 ">
{{#if  (not (is-empty this.errors))}}
  <div class="bg-red-200 p-4 mb-4">
    <h2 class="text-red-700 font-bold mb-2">Validation errors:</h2>
    {{#each this.errors as |error|}}
      <p class="text-red-700">{{error}}</p>
    {{/each}}
  </div>
{{/if}}
</div>
<div class="container mx-auto mt-4 ">

  <form {{on "submit" this.sendRental}} class="bg-slate-300  rounded-md p-14 ">
<div class="flex flex-wrap justify-end flex-col">
  <div class="w-full md:w-1/3 px-4 mb-4">
    <label class="flex flex-col">
      <span class="text-3xl my-2 font-semibold">Images</span>
      <input type="url" class="border-black border-2 rounded-md text-center border-solid" name="image" placeholder="Image URL">
    </label>
  </div>
  <div class="w-full md:w-1/3 px-4 mb-4">
    <label class="flex flex-col">
      <span class="text-3xl my-2 font-semibold">Title</span>
      <input type="text" class="border-black border-2 rounded-md text-center border-solid" name="title" placeholder="Title">
    </label>
  </div>
  <div class="w-full md:w-1/3 px-4 mb-4">
    <label class="flex flex-col">
      <span class="text-3xl my-2 font-semibold">Owner</span>
      <input type="text" class="border-black border-2 rounded-md text-center border-solid" name="owner" placeholder="Owner">
    </label>
  </div>

  <div class="w-full md:w-1/3 px-4 mb-4">
    <label class="flex flex-col">
      <span class="text-3xl my-2 font-semibold">City</span>
      <input type="text" class="border-black border-2 rounded-md text-center border-solid" name="city" placeholder="City">
    </label>
  </div>
  <div class="w-full md:w-1/3 px-4 mb-4">
    <label class="flex flex-col">
      <span class="text-3xl my-2 font-semibold">Category</span>
      <select name="category" class="p-3 rounded-md">
        <option value="Community" selected>Community</option>
        <option value="Standalone">Standalone</option>
      </select>
    </label>
  </div>
  <div class="w-full md:w-1/3 px-4 mb-4">
    <label class="flex flex-col">
      <span class="text-3xl my-2 font-semibold">Bedrooms</span>
      <input type="number" class="border-black border-2 rounded-md text-center border-solid" name="bedrooms" placeholder="Bedrooms">
    </label>
  </div>

  <div class="w-full px-4 mb-4">
    <label class="flex flex-col">
      <span class="text-3xl my-2 font-semibold">Description</span>
      <input type="text" class="border-black border-2 rounded-md text-center border-solid" name="description" placeholder="Description">
    </label>
  </div>

  <div class="w-full flex justify-center items-center">
    <button type="submit" class="bg-blue-300 text-xl rounded-md py-4 px-6 text-yellow-100">CREATE</button>
  </div>
</div>

  </form>

</div>



