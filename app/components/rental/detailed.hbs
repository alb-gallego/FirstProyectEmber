<Jumbo>
  <h2 class="font-bold text-6xl">{{@rental.title}}</h2>
  <p>Nice find! This looks like a nice place to stay near {{@rental.city}}.</p>
  <a
    href="#"
    target="_blank"
    rel="external nofollow noopener noreferrer"
    class="share button"
  >
    Share on Twitter
  </a>
</Jumbo>
<div class="flex justify-center w-screen">

  <div class="mx-5 bg-slate-100 p-5 rounded-lg">
    <article class="grid grid-cols-2 place-items-center">

      <Rental::Image
        src={{@rental.image}}
        alt="A picture of {{@rental.title}}"
      />

      <div class="grid grid-rows-5">
        <h3 class="font-bold text-3xl">About {{@rental.title}}</h3>
        <div class="detail">
          <span>Owner:</span>
          {{@rental.owner}}
        </div>
        <div class="detail">
          <span>Type:</span>
          {{@rental.type}}â€“{{@rental.category}}
        </div>
        <div class="detail">
          <span>Location:</span>
          {{@rental.city}}
        </div>
        <div class="detail">
          <span>Number of bedrooms:</span>
          {{@rental.bedrooms}}
        </div>
        <div class="detail">
          <p>{{@rental.description}}</p>
        </div>
      </div>
    </article>
  </div>


</div>
<div class="flex flex-wrap my-5  flex-row items-center justify-center">
    <button
      type="button"
      class="text-white bg-red-600 border mx-5 p-5 border-black rounded-md"
      {{on "click" (fn this.deleteRental @rental)}}
    >
DELETE RENTAL
    </button>

    <LinkTo @route="update-rental" @model={{@rental}}>
      <button
        type="button"
        class="text-white bg-green-600 border mx-5  border-black rounded-md"
      ><div class="p-5">UPDATE RENTAL </div></button>
    </LinkTo>
  </div>